generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}


// User 모델
// @id: id를 식별자로 사용
// @default(autoincrement()): id가 자동으로 증가
// @unique: username이 고유한 값이어야 함
model User {
  id        Int      @id @default(autoincrement())   
  username  String   @unique
  password  String
  nickname  String?
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  comments  Comment[]
}

// Post 모델
// @id: id를 식별자로 사용
// @default(autoincrement()): id가 자동으로 증가
// @relation(fields: [authorId], references: [id]): authorId와 User 모델의 id를 연관 관계로 설정
model Post {
  id        Int      @id @default(autoincrement())   
  title     String
  content   String
  authorId  Int
  // onDelete : Cascade : 작성자가 삭제되면 게시글도 삭제됨
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments  Comment[]
}

model Comment {
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 작성자 판별
  authorId Int
  // onDelete: Cascade: 작성자가 삭제되면 댓글도 삭제됨
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // 게시글 판별
  postId Int
  // onDelete: Cascade: 게시글이 삭제되면 댓글도 삭제됨
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}